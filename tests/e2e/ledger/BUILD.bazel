load("@bazel_bats//:rules.bzl", "bats_test", "bats_test_suite")

filegroup(
    name = "webauthn-state",
    srcs = [":webauthn_state.json"],
)

bats_test_suite(
    name = "bats-e2e-ledger",
    srcs = glob(
        include = ["*.bats"],
        exclude = ["tokens.bats"],
    ),
    tags = [
        "exclusive",
        "manual",
    ],
    uses_bats_assert = True,
    deps = [
        ":webauthn-state",
        "//src/idstore-export",
        "//src/ledger",
        "//src/many",
        "//src/many-ledger",
        "//staging:ledger-staging",
        "//tests:bats-helpers",
        "//tests:ledger-migrations",
    ],
)

